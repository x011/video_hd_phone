<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    android:orientation="horizontal"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/left_bg"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="20dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/main_arrow_top"
            style="@style/navigation_arrow"
            android:layout_marginTop="10dp"
            android:src="@drawable/arrow_top" />

        <ListView
            android:id="@+id/main_cat_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/bg_navigation"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/main_arrow_bottom"
            style="@style/navigation_arrow"
            android:layout_marginBottom="10dp"
            android:src="@drawable/arrow_bottom" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                style="@style/text_28_f2f2f2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp" />

            <ImageView
                android:id="@+id/main_vod_arrow_top"
                style="@style/main_vod_arrow"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/arrow_top" />

            <GridView
                android:id="@+id/main_subcat_grid"
                android:layout_width="match_parent"
                android:layout_height="575dp"
                android:layout_centerInParent="true"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:horizontalSpacing="20dp"
                android:listSelector="@drawable/bg_program"
                android:verticalSpacing="20dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/main_vod_arrow_bottom"
                style="@style/main_vod_arrow"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/arrow_bottom" />

            <TextView
                android:id="@+id/main_page"
                style="@style/text_18_f2f2f2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/page_bg"
                android:gravity="center"
                android:padding="3dp" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/main_subcat_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</LinearLayout>