<?xml version="1.0"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

   <!-- 没有焦点时的背景图片 -->
    <item android:drawable="@drawable/letter" android:state_window_focused="false"/>
    <item android:drawable="@drawable/letter_focus" android:state_focused="true" android:state_pressed="true"/>
    <!-- 触摸模式下单击时的背景图片 -->
    <item android:drawable="@drawable/letter_focus" android:state_focused="false" android:state_pressed="true"/>
    <!-- 选中时的图片背景 -->
    <item android:drawable="@drawable/letter_focus" android:state_selected="true"/>
    <!-- 获得焦点时的图片背景
     -->
    <item android:drawable="@drawable/letter_focus" android:state_focused="true"/>

</selector>